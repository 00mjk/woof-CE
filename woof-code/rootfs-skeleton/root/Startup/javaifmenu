#!/bin/sh
# javaifmenu - Java Control Panel menu item setup
# Add Java Control Panel to menu only if jcontrol exists

if [ -e /usr/share/applications/jcontrol.desktop ]; then
 if which jcontrol >/dev/null; then
  if grep -q '^NoDisplay=true' /usr/share/applications/jcontrol.desktop; then
   sed -i '/^NoDisplay=/ s/true/false/' /usr/share/applications/jcontrol.desktop
   fixmenus
 else
  if grep -q '^NoDisplay=false' /usr/share/applications/jcontrol.desktop; then
   sed -i '/^NoDisplay=/ s/false/true/' /usr/share/applications/jcontrol.desktop
   fixmenus
  fi
 fi
fi