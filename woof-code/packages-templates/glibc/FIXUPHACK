#!/bin/sh

mkdir -p ../glibc_DEV/sbin
if [ -f sbin/ldconfig.real ];then
 mv -f sbin/ldconfig.real ../glibc_DEV/sbin/ldconfig
 rm -f sbin/ldconfig
else
 mv -f sbin/ldconfig ../glibc_DEV/sbin/
fi

#slackware 13.1...
rm -f ./etc/profile.d/*.csh* 2>/dev/null

# remove 'incoming'
[ -d lib/incoming ] && rm -r lib/incoming

if [ "$DISTRO_TARGETARCH" = "x86_64" ] ; then
	case $BINARIES in deb*)
		#in deb-based distros, /lib64 must be a symlink to /lib
		[ -d lib64 ] && rm -rf lib64
		ln -sv lib lib64
	esac
fi

