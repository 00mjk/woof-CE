#!/bin/sh
#(c) Copyright Barry Kauler 2009
#This is a GUI frontend for Woof.

export LANG=C
[ ! -f DISTRO_SPECS ] && exit

DEFAULTTABNUM="0"

while [ 1 ]
do
 ./woof_gui_tabs $DEFAULTTABNUM > /tmp/woof_gui_tabs

. /tmp/woof_gui_tabs

 case "$EXIT" in
   UPDATE_DS) DEFAULTTABNUM="0" ; continue ;; #'Specifications' tab.
   UPDATE_PR) DEFAULTTABNUM="1" ; continue ;; #'PET repos' tab.
   UPDATE_CR) DEFAULTTABNUM="2" ; continue ;; #'Compat repos' tab.
   UPDATE_DB) #'Download dbs' tab.
    rxvt -bg yellow -title "Update databases" -e ./0setup
     DEFAULTTABNUM="3"
     continue
   ;;
   UPDATE_DP) DEFAULTTABNUM="5" ; continue ;; #see 'Download pkgs' tab.
 esac

 break
done

